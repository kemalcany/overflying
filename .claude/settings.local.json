{
  "permissions": {
    "allow": [
    ],
    "deny": [
      "Read(*.csv)",
      "Read(*.log)",
      "Read(*.pyc)",
      "Read(backend/.env)",
      "Read(scripts/.env)",
      "Read(service-account-key.json)",
      "Read(.idea/)",
      "Read(.next/)",
      "Read(.serverless)",
      "Read(.vscode/)",
      "Read(__pycache__/)",
      "Read(build/)",
      "Read(data/)",
      "Read(dist/)",
      "Read(apps/web/dist/)",
      "Read(node_modules/)",
      "Read(apps/web/node_modules/)",
      "Read(venv/)",
      "Read(yarn.lock)",
      "Read(backend/.env)"
    ],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/validate-bash.sh"
          }
        ]
      }
    ]
  }
}